{# templates/partials/stat_card.html.twig #}
<div class="flex items-center justify-between p-4 rounded-lg shadow-md text-white {{ color }}">
  {# Left: Title & Value #}
  <div>
    <h3 class="text-sm font-medium">{{ title }}</h3>
    <p class="text-2xl font-semibold mt-1">{{ value }}</p>
  </div>

  {# Right: Icon (optional) #}
  {% if icon is defined %}
    <div class="text-3xl">
      <i class="{{ icon }}"></i>
    </div>
  {% endif %}
</div>
