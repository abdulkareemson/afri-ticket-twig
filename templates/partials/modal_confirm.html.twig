<div {% if isOpen %} class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50" {% else %} class="hidden" {% endif %} > <div class="bg-white rounded-lg shadow-lg max-w-sm w-full p-6"> <h2 class="text-lg font-semibold mb-2">{{ title|default('Are you sure?') }}</h2> <p class="text-gray-600 mb-4">{{ message|default('This action cannot be undone.') }}</p>
<div class="flex justify-end gap-3">
  <button
    type="button"
    class="px-4 py-2 bg-gray-300 rounded hover:bg-gray-400 transition"
    onclick="{{ onCancel|default('closeModal()') }}"
  >
    Cancel
  </button>

  <button
    type="button"
    class="px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600 transition"
    onclick="{{ onConfirm|default('confirmAction()') }}"
  >
    Confirm
  </button>
</div>

</div> </div> <script> function closeModal() { const modal = document.querySelector('.fixed.inset-0'); if (modal) modal.classList.add('hidden'); } function confirmAction() { alert('Confirmed!'); closeModal(); } </script>